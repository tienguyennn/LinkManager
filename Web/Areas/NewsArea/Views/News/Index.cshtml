@{
    ViewBag.Title = "News";
    Layout = "~/Views/Shared/_LayoutAce.cshtml";
    ViewBag.ModuleName = "Quản lý thông tin sự kiện";
    ViewBag.PageName = "Danh sách thông tin sự kiện";
    ViewBag.ModuleCode = "QLtintuc";

}
@using Model.IdentityEntities;
@using Model.Entities;
@using Newtonsoft.Json;
@using Service.Common;
@using Service.NewsService.Dto;
@model PageListResultBO<NewsDto>
@{
    var lstData = Html.Raw(JsonConvert.SerializeObject(Model.ListItem).Replace("<", "&lt;").Replace(">", "&gt;"));
}

@section ActionBarRight{
    <a href="#collapseDiv" class="btn btn-sm btn-primary" aria-controls="collapsePanel" data-toggle="collapse" role="button">
        Tìm kiếm
    </a>
@*<a href="/NewsArea/News/Import"  class="btn btn-primary btn-sm">Import</a>*@
    <a href="javascript:void(0)" onclick="CreateAction('/NewsArea/News/Create')" class="btn btn-primary btn-sm">Thêm mới</a>
}
@Html.Partial("_SearchPartial")
<style>
    .imagenews {
        width: 150px;
    }
</style>
<div id="tbl-News" class="hntbl-cover table-scroll">
	<div class="table-wrap">
    <table class="hinet-table table table-striped table-hover" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th class="fixed-side">#</th>

                <th class="fixed-side" style="width: 140px">Thao tác</th>
                <th style="width: 160px; text-align: center">Ảnh đại diện</th>
                <th>Loại</th>
                <th>Tiêu đề</th>
                <th>Mô tả</th>

                <th style="width: 80px; text-align: center">Phát hành</th>

            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
</div>

@section scripts{
    <script>
        var lstData = eval(@lstData);
        var moduleTableSelector="#tbl-News";
        function pagefunction(){
            var conf=[
                {
                    tdClass:"center width50 fixed-side",
                    isSort:false,
                    nameModel: "",
                    isCounter:true,
                    content: function (data) {
                        return "<input type='checkbox'/>"
                    }
                },

                   {
                       isSort:false,
                       nameModel:"",
                       tdClass:"center fixed-side",
                       content: function (data) {
                           var result = `<div class="btn-group">
                               <button data-toggle="dropdown" class="btn btn-xs btn-primary btn-white dropdown-toggle" aria-expanded="false">Thao tác<i class="ace-icon fa fa-angle-down icon-on-right"></i>
                               </button>

                               <ul class="dropdown-menu">`;
                           result += "<li><a href='/NewsArea/News/Detail/" + data.Id + "' title = 'Xem chi tiết'><i class='fa fa-info-circle'> </i>  Xem chi tiết</a> </li>";
                           result += "<li><a href='javascript:void(0)' onclick='EditAction(\"/NewsArea/News/Edit/" + data.Id + "\")'   title = 'Chỉnh sửa'><i class='glyphicon glyphicon-edit'> </i> Sửa thông tin</a> </li>";
                           result += "<li><a href='javascript:void(0)' onclick='DeleteAction(\"/NewsArea/News/Delete/" + data.Id + "\")'  title = 'Xóa'><i class=' glyphicon glyphicon-remove' style='color:red'> </i> Xóa</a></li>";
                           result += "</ul></div>";
                           return result;
                       }
                   },
                {
                    isSort: false,
                    nameModel: 'ImageThumb',
                    content: function (data) {
                        return "<img src='/" + data.ImageThumb + "' class='imagenews' />";
                    }
                },
                {
                    isSort: false,
                    nameModel: 'Title',
                    content: function (data) {
                        return data.NameLoai
                    }
                },
				{
					isSort:false,
					nameModel:'Title',
					content: function (data) {
                        return html(data.Title)
				}
				},
				{
                    isSort: false,
					nameModel:'Description',
					content: function (data) {
					return data.Description
				}
				},
			
			
                {
                    isSort: false,
                    nameModel: 'IsPublish',
                    content: function (data) {
                        return data.IsPublish ? "<i class='fa fa-check green'></i>" : ""
                    }
                },


            ];


            var getdatafunc=function(page,sortQuery,pageSize){
                $.ajax({
                    url: '/NewsArea/News/getData',
                    type: 'post',
                    cache: false,
                    data:{"indexPage":page,"sortQuery":sortQuery,"pageSize":pageSize},
                    success: function (data) {
                        $(moduleTableSelector).hinetTable("data",{
                            pageSize:pageSize!=-1?pageSize:data.Count,
                            pageIndex:page,
                            pagecount: data.TotalPage,
                            recordCount: data.Count,
                            listItem: data.ListItem,});
                    },
                    error: function (err) {
                        CommonJS.alert(xhr.responseText);
                    }
                });

            }

            var tblData=$("#tbl-News").hinetTable("init",{
                pageSizeList:{size:[20,50,100,-1],label:['20','50','100','Tất cả']},
                pagecount: @Model.TotalPage,
                recordCount: @Model.Count,
                actionToolBar:'<a href=\"#collapseDiv\" aria-controls=\"collapsePanel\" data-toggle=\"collapse\" role=\"button\" class="btn btn-primary btn-xs"><i class="fa fa-search"></i> Tìm kiếm</a>',
                getData:getdatafunc,
                listItem:lstData,
                config:conf
            });
        }

        function html(string) {
            string.replace("<", "&lt;").replace(">", "&gt;");
            return string;
        }

        function AfterSussessActionAjaxform(){
            $(moduleTableSelector).hinetTable("reload");
        }
        function AjaxSearchSuccess(rs) {
            $(moduleTableSelector).hinetTable("data", {
                pageIndex: 1,
                pagecount: rs.TotalPage,
                recordCount: rs.Count,
                listItem: rs.ListItem,
            });
        }
        pagefunction();
    </script>
}