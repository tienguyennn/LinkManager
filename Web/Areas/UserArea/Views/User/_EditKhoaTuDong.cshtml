@using Model.IdentityEntities
@using Web.Areas.UserArea.Models
@using Newtonsoft.Json;

@model CauHinhKhoaTuDongViewModel
@{
}
<div class="modal-dialog">
    @using (Ajax.BeginForm("SaveThongTinKhoaTuDong", "User", new { @area = "UserArea" }, new AjaxOptions()
    {
        HttpMethod = "POST",
        OnFailure = "AjaxFormError",
        OnSuccess = "onAjaxCallSuccess",
    }, new { id = "form--cauhinh-khoa-tudong" }))
    {
        @Html.AntiForgeryToken()
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <div class="center">
                    <h4 class="modal-title">
                        CẬP NHẬT THÔNG TIN KHÓA TỰ ĐỘNG
                    </h4>
                </div>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    @Html.HiddenFor(x => x.IdUser)
                    <div class="form-group">
                        <label class="control-label col-sm-4">Ngày bắt đầu <span class="red">*</span></label>
                        <div class="col-sm-8">
                            @Html.DatePickerFor(m => m.NgayBatDau, "autoclose=true", "todayBtn=true", "todayHighlight=true")
                            @Html.ValidationMessageFor(m => m.NgayBatDau, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4">Ngày kết thúc <span class="red">*</span></label>
                        <div class="col-sm-8">
                            @Html.DatePickerFor(m => m.NgayKetThuc, "autoclose=true", "todayBtn=true", "todayHighlight=true")
                            @Html.ValidationMessageFor(m => m.NgayKetThuc, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer center">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i>&nbsp;Lưu
                </button>

                <button type="button" class="btn btn-danger" data-dismiss="modal">
                    <i class="fa fa-times"></i>&nbsp;Đóng
                </button>
            </div>
        </div>
    }
</div>
@Scripts.Render("~/bundles/jqueryval")
