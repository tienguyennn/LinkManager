@using Model.IdentityEntities
@using Model.IdentityEntities
@using Web.Areas.LinkArea.Models

@model EditVM
@{
    var dropdownListCategoryId = ViewBag.dropdownListCategoryId as List<SelectListItem>;

}
<div class="modal-dialog">
    @using (Ajax.BeginForm("Edit", "Link", new { @area = "LinkArea" }, new AjaxOptions()
    {
        HttpMethod = "POST",
        OnFailure = "AjaxFormError",
        OnSuccess = "AjaxFormSuccess",
    }, new { id = "editLinkForm", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        //HtmlHelper.UnobtrusiveJavaScriptEnabled = false;
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <div class="center">
                    <h4 class="modal-title">Cập nhật Sản phẩm</h4>
                </div>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    @Html.HiddenFor(x => x.Id)
                    <div class="form-group">
                        <label class="control-label col-sm-4">Danh mục <span class="red">*</span></label>
                        <div class="col-sm-8">
                            @Html.DropDownListFor(m => m.SystemId, dropdownListCategoryId, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.SystemId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4">Tên <span class="red">*</span></label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-4">Liên kết <span class="red">*</span></label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.Href, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Href, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4">Ip</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.Ip, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Ip, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4">Mô tả </label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4">Hoạt động </label>
                        <div class="col-sm-8">
                            <input type="checkbox" name="Active" @(Model.Active ? "checked='checked'" : "") />
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer center">
                <button type="submit" class="btn btn-primary">Hoàn thành</button>

                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    }
</div>
<script>
    $("#SystemId").select2();

</script>
@Scripts.Render("~/bundles/jqueryval")
