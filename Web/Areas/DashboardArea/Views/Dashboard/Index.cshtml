<script>
    function debounce(func, timeout = 300) {
        let timer;
        return (...args) => {
            clearTimeout(timer);
            timer = setTimeout(() => { func.apply(this, args); }, timeout);
        };
    }
    function search(target) {
        var id = target.id;
        var value = target.value.toLowerCase();
        $(`.${id}`).each(function () {
            var name = $(this).data('name');
            if (name != '' && name.toLowerCase().includes(value)) {
                $(this).show();
            }
            else {
                $(this).hide();
            }
        })


    }

    $('.search').on("input", debounce(function (e) {
        search(e.target);
    }));
</script>