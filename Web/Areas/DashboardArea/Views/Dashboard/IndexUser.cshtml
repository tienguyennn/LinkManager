<main>
    <div class="main-content">
        <div class="boxes-container">
            @foreach (var item in datas)
            {
                <div class="box @(active ? "active" : "")" id="box-@item.Environment.Id">
                    <div class="box-icon">
                        <img src="~/Content/Img/network.png" />
                    </div>
                    <div class="box-text">@item.Environment.Name</div>
                    @*<div class="box-description">Raise new incident.</div>*@
                </div>
                active = false;
            }
        </div>
        <div class="content-container">
            @{active = true;}
            @foreach (var item in datas)
            {
                <div class="box-environment @(active ? "active":"") box-@item.Environment.Id search-@item.Environment.Id">
                    <input placeholder="search" id="search-@item.Environment.Id" class="search-input" />
                    @foreach (var system in item.SystemEntityDatas)
                    {
                        <div class="box-system system-@system.SystemEntity.Id">
                            <div class="system-title"> @system.SystemEntity.Name</div>
                            @foreach (var link in system.Links)
                            {
                                <div class="link">
                                    <a href="@link.Href" target="_blank" data-name="@link.Name" data-system="@system.SystemEntity.Id">@link.Name</a>
                                    <small>@link.Description</small>
                                </div>
                            }
                        </div>
                    }
                </div>
                active = false;
            }
        </div>
    </div>

</main>

