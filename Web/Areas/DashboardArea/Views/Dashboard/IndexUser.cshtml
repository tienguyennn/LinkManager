<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
<script>

    $('.box').click(function () {
        $('.box').removeClass("active");
        $(this).addClass("active");
        var id = $(this).attr('id');
        console.log(id);

        $('.box-environment').hide();
        $('.' + id).show();
    });

    function debounce(func, timeout = 300) {
        let timer;
        return (...args) => {
            clearTimeout(timer);
            timer = setTimeout(() => { func.apply(this, args); }, timeout);
        };
    }
    function search(target) {
        var id = target.id;
        console.log(id);
        var value = target.value.toLowerCase();
        if (value != '') {
            $(`.${id} .box-system`).hide();
            $(`.${id} .link a`).each(function () {
                var name = $(this).data('name');
                if (name != '' && name.toLowerCase().includes(value)) {
                    $(this).show();
                    var systemId = $(this).data("system");
                    $(`.system-${systemId}`).show();
                }
                else {
                    $(this).hide();
                }
            })
        }
        else {
            $(`.${id} .box-system`).show();
            $(`.${id} .link a`).show();
        }

    }

    $('.search-input').on("input", debounce(function (e) {
        search(e.target);
    }));

</script>