    <script>
        function BookTable() {
            var firstName = $('#first-name').val();
            var lastName = $('#last-name').val();
            var date = $('#date').val();
            var time = $('#time').val();
            var phone = $('#phone').val();
            var message = $('#message').val();
            if (firstName == "" || lastName == "" || date == "" || time == "" || phone == "" || message == "") {
                alert("Please enter enough information!");
                return;
            }
            var data = {
                Ho: firstName,
                Ten: lastName,
                Ngay: date,
                Gio: time,
                DienThoai: phone,
                NoiDung: message,
            }
            console.log(data);

            $.ajax({
                url: "/DatBanArea/DatBan/create",
                type: 'POST',
                data: data,
                success: function (rs) {
                    alert(rs);
                },
                error: function (err) {

                }
            })
        }

        function AddToCart(id) {
            $.ajax({
                url: "/Home/AddToCart",
                type: 'POST',
                data: { id: id },
                success: function (rs) {
                    $('#cart-num').text(rs);
                }
            })
        }

        $(document).ready(function () {
            $.ajax({
                url: "/Home/GetCartNum",
                type: 'POST',
                data: null,
                success: function (rs) {
                    $('#cart-num').text(rs);
                }
            })
        })
    </script>
