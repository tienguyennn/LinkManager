@using Service.NewsService.Dto
@using Web.Models
@model IndexTinTucVM
@{
    ViewBag.Title = "NewsTinTuc";
    Layout = "~/Views/Shared/_LayoutFrontEnd.cshtml";
}

<style>
    .class-sukien {
        width: 100%;
        float: left;
        margin: 20px 0 30px;
    }

        .class-sukien h3 {
            font-size: 18px;
            margin-top: 0;
        }

        .class-sukien p {
            -webkit-line-clamp: 5;
            overflow: hidden;
            display: -webkit-box;
            -webkit-box-orient: vertical;
            height: auto;
            line-height: 1.4;
        }

        .class-sukien img {
            max-height: 197px;
            width: 100%;
        }

    .bre-index {
        width: 100%;
        float: left;
        margin: 30px 0;
        border-bottom: 1px solid #ccc;
    }

        .bre-index .bre-2 {
            display: inline-block;
        }

        .bre-index .bre-1 {
            display: inline-block;
            padding-right: 10px;
        }

            .bre-index .bre-1 span a:hover {
                color: #c62d2f;
            }

            .bre-index .bre-1 span a {
                text-transform: uppercase;
                font-size: 16px;
                color: #2c3e50;
                font-family: RobotoBold;
            }

        .bre-index span a {
            text-transform: uppercase;
            text-decoration: none;
            color: #c62d2f;
            font-family: Roboto;
        }

        .bre-index .bre-1 span::after {
            padding-left: 5px;
            font-size: 20px;
            content: "\00BB";
        }

    .pd-15 {
        padding-left: 15px !important;
        padding-right: 15px !important;
    }
</style>
<div class="container">
    <div class="pd-15">
        <div class="bre-index" style="width:100%;float:left;">

            <div class="bre-1">
                <span>
                    <a href="/"> Trang chủ</a>
                </span>

            </div>
            <div class="bre-2">
                <span>
                    <a href="#">Sự kiện</a>
                </span>
            </div>
        </div>
    </div>
    <div class="class-sukien">
        @if (Model.ListTinTuc != null && Model.ListTinTuc.Any())
        {
            foreach (var item in Model.ListTinTuc.Take(10).ToList())
            {
                <div class="col-sm-4">
                    <a href="/su-kien/@item.Id">
                        <img src="/@item.ImageThumb" />
                    </a>
                </div>
                <div class="col-sm-8" style="padding-right: 0">
                    <a href="/su-kien/@item.Id" style="color: #333333">
                        <h3>@item.Title</h3>
                    </a>
                    <p>@item.Description</p>
                </div>
            }

        }
    </div>

</div>

