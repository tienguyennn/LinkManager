

@model Web.Models.HomeViewModel
@{
    Layout = "~/Views/Shared/_LayoutEndUser.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-7 px-0">
            <div class="owl-carousel main-carousel position-relative">
                @foreach (var item in Model.ListSildes)
                {
                    <div class="position-relative overflow-hidden" style="height: 500px;">
                        <img class="img-fluid h-100" src="@item.ImageThumb" style="object-fit: cover;">
                        <div class="overlay">
                            <div class="mb-2">
                                <a class="badge badge-primary text-uppercase font-weight-semi-bold p-2 mr-2"
                                   href="">Business</a>
                                <a class="text-white" href="">@item.UpdatedDate.ToString("MMMM d, yyyy", System.Globalization.CultureInfo.InvariantCulture)</a>
                            </div>
                            <a class="h2 m-0 text-white text-uppercase font-weight-bold" href="">@item.Title</a>
                        </div>
                    </div>
                }

            </div>
        </div>
        <div class="col-lg-5 px-0">
            <div class="row mx-0">
                @foreach (var item in Model.ListBox)
                {
                    <div class="col-md-6 px-0">
                        <div class="position-relative overflow-hidden" style="height: 250px;">
                            <img class="img-fluid w-100 h-100" src="@item.ImageThumb" style="object-fit: cover;">
                            <div class="overlay">
                                <div class="mb-2">
                                    <a class="badge badge-primary text-uppercase font-weight-semi-bold p-2 mr-2"
                                       href="">Business</a>
                                    <a class="text-white" href=""><small>@item.UpdatedDate.ToString("MMMM d, yyyy", System.Globalization.CultureInfo.InvariantCulture)</small></a>
                                </div>
                                <a class="h6 m-0 text-white text-uppercase font-weight-semi-bold" href="">@item.Title</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Main News Slider End -->
